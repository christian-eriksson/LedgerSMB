   <action name="Send"   resulting_state="SENT">
     <condition name="Complete" />
  </action>
   <action name="Cancel" resulting_state="CANCELLED"/>
 </state>
 -->

 <state name="EXPANDED" autorun="true">
   <action name="do-send" resulting_state="SUCCESS" />
 </state>
 <state name="SUCCESS" />
 <state name="CANCELLED" />
</workflow>
